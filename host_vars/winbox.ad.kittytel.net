---
pxe_os: windows
ks_use_disk: vda
vm_name: jumpbox
short_host: "{{ vm_name }}"
sys_mac_addr: "52:54:BE:EF:CA:FE"
deploy_windows_version: "server2022"
vm_hypervisor: hv-lgb
vm_vcpus: 2
vm_memory_mb: 4096
ip_use_dhcp: true
vm_internal: yes
vm_use_efi: true
vm_autostart: false
vm_volumes:
- name: '{{ vm_name }}-disk'
  device: 'disk'
  format: 'qcow2'
  capacity: 250000M
  type: file
  pool: "{{ vm_pool_directory }}"
vm_interfaces:
- type: 'bridge'
  mac: "{{ sys_mac_addr }}"
  source:
    dev: "{{ vm_local_bridge }}"
