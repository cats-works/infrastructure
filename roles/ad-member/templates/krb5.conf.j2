[logging]
    default = FILE:/var/log/krb5libs.log
    kdc = FILE:/var/log/krb5kdc.log
    admin_server = FILE:/var/log/kadmind.log

[libdefaults]
    default_realm = {{ ad_domain | upper }}
    clockskew = 300
    ticket_lifetime = 1d
    renew_lifetime = 7d
    dns_lookup_realm = true
    dns_lookup_kdc = true
    forwardable = true
    spake_preauth_groups = edwards25519
    proxiable = true
    default_ccache_name = KEYRING:persistent:%{uid}
    udp_preference_limit = 0
    default_keytab_name = FILE:/etc/krb5.keytab
    default_tkt_enctypes =  aes256-cts des3-cbc-sha1 arcfour-hmac des-cbc-md5 des-cbc-crc
    default_tgs_enctypes = aes256-cts des3-cbc-sha1 arcfour-hmac des-cbc-md5 des-cbc-crc

[realms]
    {{ ad_domain | upper }} = {
        kdc = {{ ad_domain | upper }}
        admin_server = {{ ad_domain | upper }}
    }